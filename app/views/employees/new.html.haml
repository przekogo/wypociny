.container
  %h2 Sign up
  %form#employee-form{action: "/employees/create", method: "post"}
    =hidden_field_tag "authenticity_token", form_authenticity_token
    %div
      %label name
      %input.form-control{name: "name"}
      %br/
    %div
      %label surname
      %input.form-control{name: "surname"}
      %br/
    %div
      %label email
      %input.form-control{"data-bv-emailaddress" => "true", "data-bv-emailaddress-message" => "Please enter a valid e-mail adress", "data-bv-notempty" => "true", "data-bv-notempty-message" => "The email address is required and cannot be empty", name: "email", type: "text", placeholder: "Email of invited person", class: 'wide-field'}/
    %div
      %label password
      %input.form-control{autocomplete: "off", name: "password"}
    %br/
    %div
      %label confirm password
      %input.form-control{autocomplete: "off", name: "confirm-password"}
      %br/
    %button.btn.btn-primary{type: "submit"} Register
:javascript
  $(document).ready(function() {
      $('#employee-form').bootstrapValidator();
  });