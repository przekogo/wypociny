.container
  %h2 Sign up
  %form#employee-form{action: "/employees/create", method: "post"}
    =hidden_field_tag "authenticity_token", form_authenticity_token
    .form-group
      %label Imię
      %input.form-control{name: "name"}
    .form-group
      %label Nazwisko
      %input.form-control{name: "surname"}
    .form-group
      %label E-mail
      %input.form-control{name: "email", type: "email", placeholder: "Your email, also used as login"}
    .form-group
      %label Hasło
      %input.form-control{autocomplete: "off", name: "password", type: "password"}
    .form-group
      %label Potwierdź hasło
      %input.form-control{autocomplete: "off", name: "confirmPassword", type: "password"}
    %button.btn.btn-primary{type: "submit"} Register
:javascript
  $(document).ready(function() {
      validate('#employee-form');
  });