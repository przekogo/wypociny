%html
  %head
    %title Cvon
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

    / BootstrapValidator requires Bootstrap CSS v3.0.0 or higher
    %link{:href => "/path/to/bootstrap/css/bootstrap.css", :rel => "stylesheet"}/
    %link{:href => "/path/to/dist/css/bootstrapValidator.min.css", :rel => "stylesheet"}/
    / and jQuery v1.9.1 or higher
    %script{:src => "/path/to/jquery/jquery-1.10.2.min.js", :type => "text/javascript"}
    %script{:src => "/path/to/bootstrap/js/bootstrap.min.js", :type => "text/javascript"}

  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => root_path} CVOn
        #navbar.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              %a{:href => root_path} Home
            %li
              %a{:href => new_user_session_path} Logowanie
            %li
              %a{:href => "#"} Rejestracja
              %ul
                %li
                  %a{:href => new_employee_path} Employee
                %li
                  %a{:href => new_company_path} Company
            -if user_signed_in?
              %li
                %a{:href => "#"} #{current_user.email}
        / /.nav-collapse
    %br/
    %br/
    = yield
/Bootstrap core JavaScript
/\==================================================
/ Placed at the end of the document so the pages load faster
%script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"}
%script{:src => "../../dist/js/bootstrap.min.js"}
/ IE10 viewport hack for Surface/desktop Windows 8 bug
%script{:src => "../../assets/js/ie10-viewport-bug-workaround.js"}