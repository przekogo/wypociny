%html
  %head
    %title Cvon
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => root_path} CVOn
        #navbar.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              %a{:href => root_path} Home
            %li
              %a{:href => new_user_session_path} Logowanie
            -unless user_signed_in?
              %li
                %a{:href => "#"} Rejestracja
                %ul
                  %li
                    %a{:href => new_employee_path} Pracownik
                  %li
                    %a{:href => new_company_path} Firma
            -if user_signed_in?
              %li.stick-right
                -if current_user.employee_id == nil
                  =link_to current_user.email, company_path(current_user.company.id)
                -elsif current_user.company_id == nil
                  =link_to current_user.email, employee_path(current_user.employee.id)
        / /.nav-collapse
    %br/
    %br/
    = yield
